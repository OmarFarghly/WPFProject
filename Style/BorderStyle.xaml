<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="BorderStyle1">
        <Style.Setters>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Margin" Value="1,38,2,10"/>
        </Style.Setters>
    </Style>
    <Style TargetType="Border" x:Key="BorderStyle2">
        <Style.Setters>
            <Setter Property="Background" Value="#eff2f7"/>
            <Setter Property="CornerRadius"  Value="30"/>
        </Style.Setters>
    </Style>
    <Style TargetType="Border" x:Key="ApplicationForm">
        <Style.Setters>
            <Setter Property="Background" Value="#FF680C0C"/>
            <Setter Property="CornerRadius"  Value="30"/>
        </Style.Setters>
    </Style>
   


</ResourceDictionary>